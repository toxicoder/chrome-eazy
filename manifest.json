{
  "manifest_version": 3,
  "name": "chrome-eazy",
  "version": "1.0",
  "description": "A browser extension to organize your tabs into clean workspaces.",
  "permissions": [
    "sidePanel",
    "tabGroups",
    "tabs",
    "storage",
    "bookmarks",
    "history",
    "sessions"
  ],
  "action": {
    "default_title": "Open side panel"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "chrome_url_overrides": {
    "newtab": "dashboard.html"
  }
}
